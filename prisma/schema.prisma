// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Users {
  id        String   @id @default(cuid())
  name      String
  nickname  String
  email     String
  password  String
  birthDate String
  country   String
  state     String
  createdAt DateTime @default(now())
  level     Int      @default(1)
  license   String   @default("B")
  logged    Boolean  @default(false)
}

model Brands {
  id   String @id @default(cuid())
  name String
  Cars Cars[]
}

model Cars {
  id         String @id @default(cuid())
  model      String
  year       String
  price      Int
  brandId    String
  drivetrain String
  power      Int
  weight     Int
  aspiration String

  brand Brands @relation(fields: [brandId], references: [id], onDelete: Cascade)
}

model Tracks {
  id        String @id @default(cuid())
  name      String
  shortName String
  country   String
  extension String
}
